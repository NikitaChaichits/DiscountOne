    //Rating

    <ImageView
        android:id="@+id/ivRateArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_offset_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivShopLogo"
        app:layout_constraintEnd_toStartOf="@id/tvRate"
        app:layout_constraintTop_toTopOf="@id/ivShopLogo"
        tools:src="@drawable/ic_arrow_up" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_8dp"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivShopLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivShopLogo"
        tools:text="273" />

        if (item.rating >= 0) {
            ivRateArrow.setImageDrawable(ivRateArrow.getImageDrawable(R.drawable.ic_arrow_up))
        } else {
            ivRateArrow.setImageDrawable(ivRateArrow.getImageDrawable(R.drawable.ic_arrow_down))
        }
        tvRate.text = item.rating.toString()