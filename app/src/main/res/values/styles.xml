<resources>

    <!-- Common -->
    <style name="BaseAppTheme.Dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="BaseAppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/light</item>
        <item name="android:layout_marginTop">@dimen/common_offset_16dp</item>
    </style>

    <!-- Text Style -->

    <style name="TextRegular">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextRegular.Bold">
        <item name="android:textSize">@dimen/common_textSize_16sp</item>
        <item name="lineHeight">@dimen/common_offset_24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRegular.Title">
        <item name="android:textSize">@dimen/common_textSize_24sp</item>
        <item name="android:layout_marginHorizontal">@dimen/common_offset_32dp</item>
        <item name="lineHeight">@dimen/common_offset_32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRegular.Description">
        <item name="android:textSize">@dimen/common_textSize_14sp</item>
        <item name="android:layout_marginHorizontal">@dimen/common_offset_32dp</item>
        <item name="lineHeight">@dimen/common_offset_16dp</item>
        <item name="android:textColor">@color/light_description</item>
    </style>

    <!-- Button Style -->

    <style name="ButtonColored">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">@dimen/common_offset_32dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/common_textSize_14sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonColored.Coupon">
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">@dimen/radius_8</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginHorizontal">@dimen/common_offset_32dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/common_textSize_14sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>
