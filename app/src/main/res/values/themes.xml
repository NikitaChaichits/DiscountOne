<resources>
    <!-- Base application theme. -->
    <style name="Theme.DiscountOne" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/defaultColorReverse</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
    </style>

    <style name="Theme.DiscountOne.TranslucentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BottomSheetFragmentTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>