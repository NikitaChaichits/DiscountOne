<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clDeal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/common_offset_8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/common_offset_16dp"
        android:paddingVertical="@dimen/common_offset_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_offset_24dp"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toStartOf="@id/ivBookmark"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:srcCompat="@drawable/ic_uploading" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBookmark"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/common_offset_32dp"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:srcCompat="@drawable/ic_wishlist_colored" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivDealImage"
                android:layout_width="0dp"
                android:layout_height="360dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpImages"
                android:layout_width="0dp"
                android:layout_height="360dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/dots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_constraintTop_toBottomOf="@id/vpImages"
                app:tabBackground="@drawable/dot_tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />

            <TextView
                android:id="@+id/tvPrice"
                style="@style/TextRegular.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dots"
                tools:text="₹ 1 799.00" />

            <TextView
                android:id="@+id/tvPriceWithDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_12dp"
                android:textColor="@color/green"
                android:textSize="@dimen/common_textSize_20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tvPrice"
                app:layout_constraintStart_toEndOf="@id/tvPrice"
                app:layout_constraintTop_toTopOf="@id/tvPrice"
                tools:text="€65.00" />

            <TextView
                android:id="@+id/tvWishlist"
                style="@style/TextRegular.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="@string/fr_deal_add_to_bookmarks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrice" />

            <TextView
                android:id="@+id/tvPublishedDate"
                style="@style/TextRegular.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWishlist"
                tools:text="Published today at 10:30 PM" />

            <TextView
                android:id="@+id/tvDealName"
                style="@style/TextRegular.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="@dimen/common_offset_8dp"
                android:paddingHorizontal="@dimen/common_offset_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvPublishedDate"
                tools:text="WH-1000XM5 Wireless Industry Leading Noise Canceling Headphones" />

            <ImageView
                android:id="@+id/ivCouponCompanyLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/common_offset_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDealName" />

            <TextView
                android:id="@+id/tvCouponCompany"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_8dp"
                android:layout_marginEnd="@dimen/common_offset_8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/common_textSize_14sp"
                app:layout_constraintBottom_toBottomOf="@id/ivCouponCompanyLogo"
                app:layout_constraintEnd_toStartOf="@id/ivRateArrowUp"
                app:layout_constraintStart_toEndOf="@id/ivCouponCompanyLogo"
                app:layout_constraintTop_toTopOf="@id/ivCouponCompanyLogo"
                tools:text="Nike" />

            <ImageView
                android:id="@+id/ivTimeValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_24dp"
                android:src="@drawable/ic_time_valid"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCouponCompanyLogo" />

            <TextView
                android:id="@+id/tvTimeValid"
                style="@style/TextRegular.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:textSize="@dimen/common_textSize_12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivTimeValid"
                app:layout_constraintStart_toEndOf="@id/ivTimeValid"
                app:layout_constraintTop_toTopOf="@id/ivTimeValid"
                tools:text="Valid until 23.02.23" />

            <ImageView
                android:id="@+id/ivRateArrowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_offset_12dp"
                android:src="@drawable/ic_arrow_up_big"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivCouponCompanyLogo"
                app:layout_constraintEnd_toStartOf="@id/tvRate"
                app:layout_constraintTop_toTopOf="@id/ivCouponCompanyLogo" />

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_offset_12dp"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/common_textSize_14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivCouponCompanyLogo"
                app:layout_constraintEnd_toStartOf="@id/ivRateArrowDown"
                app:layout_constraintTop_toTopOf="@id/ivCouponCompanyLogo"
                tools:text="273" />

            <ImageView
                android:id="@+id/ivRateArrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_offset_20dp"
                android:rotation="180"
                android:src="@drawable/ic_arrow_up_big"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivCouponCompanyLogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivCouponCompanyLogo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetDeal"
                style="@style/ButtonColored.Coupon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_16dp"
                android:text="@string/get_deal"
                app:layout_constraintEnd_toStartOf="@id/btnCopy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivTimeValid" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btnCopy"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/common_offset_16dp"
                android:background="@drawable/shape_grey_border"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnGetDeal"
                app:layout_constraintTop_toTopOf="@id/btnGetDeal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_offset_12dp"
                    android:src="@drawable/ic_copy" />

                <TextView
                    android:id="@+id/tvCouponText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/defaultColor"
                    android:textStyle="bold"
                    tools:text="GIZ700" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tvMoreAboutDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_32dp"
                android:text="@string/fr_deal_more_about_discount"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/common_textSize_16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnGetDeal" />

            <TextView
                android:id="@+id/tvMoreAboutDiscountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_offset_16dp"
                android:paddingHorizontal="@dimen/common_offset_16dp"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/common_textSize_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMoreAboutDiscount"
                tools:text="Industry Leading noise cancellation-two processors control 8 microphones for unprecedented noise cancellation. With Auto NC Optimizer, noise canceling is automatically optimized based on your wearing conditions and environment.
Magnificent Sound, engineered to perfection with the new Integrated Processor V1" />

            <View
                android:id="@+id/separator"
                style="@style/Separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/common_offset_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvMoreAboutDiscountText" />

            <TextView
                android:id="@+id/tvDisclosure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_offset_16dp"
                android:paddingHorizontal="@dimen/common_offset_16dp"
                android:text="@string/fr_deal_disclosure"
                android:textSize="@dimen/common_textSize_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator" />

            <TextView
                android:id="@+id/tvSimilarShopDeals"
                style="@style/TextRegular.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/common_offset_16dp"
                android:layout_marginBottom="@dimen/common_offset_24dp"
                android:text="@string/fr_deal_similar_deals"
                android:textSize="@dimen/common_textSize_20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDisclosure" />

            <TextView
                android:id="@+id/tvSimilarShopName"
                style="@style/TextRegular.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_8dp"
                android:layout_marginTop="@dimen/common_offset_16dp"
                android:layout_marginBottom="@dimen/common_offset_24dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_textSize_20sp"
                app:layout_constraintStart_toEndOf="@id/tvSimilarShopDeals"
                app:layout_constraintTop_toBottomOf="@id/tvDisclosure" />

            <TextView
                android:id="@+id/tvMoreShopDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_offset_16dp"
                android:text="@string/fr_deal_similar_more_deals"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tvSimilarShopDeals"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSimilarShopDeals" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSimilarShopDeals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_24dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvSimilarShopDeals"
                tools:itemCount="3"
                tools:listitem="@layout/rv_deal_linear" />

            <TextView
                android:id="@+id/tvSimilarCategoryDeals"
                style="@style/TextRegular.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="@dimen/common_offset_16dp"
                android:layout_marginBottom="@dimen/common_offset_24dp"
                android:paddingHorizontal="@dimen/common_offset_16dp"
                android:text="@string/fr_deal_daily_top"
                android:textSize="@dimen/common_textSize_20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvSimilarShopDeals" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSimilarCategoryDeals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_marginTop="@dimen/common_offset_24dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvSimilarCategoryDeals"
                tools:itemCount="3"
                tools:listitem="@layout/rv_deal_linear" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/grSimilarCategoryDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tvSimilarCategoryDeals, rvSimilarCategoryDeals" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/grSimilarShopDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tvSimilarShopDeals, tvSimilarShopName, rvSimilarShopDeals" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/ivLoading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:foregroundGravity="top"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="scrollView, ivBack, ivBookmark, ivShare" />

</androidx.constraintlayout.widget.ConstraintLayout>