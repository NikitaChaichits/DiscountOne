<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivLoading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="300dp"
            android:foregroundGravity="top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="@dimen/common_offset_24dp"
            android:layout_height="@dimen/common_offset_24dp"
            android:layout_marginStart="@dimen/common_offset_16dp"
            app:layout_constraintBottom_toBottomOf="@id/searchView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/searchView"
            app:srcCompat="@drawable/ic_launcher" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/common_offset_40dp"
            android:layout_height="@dimen/common_offset_40dp"
            android:layout_marginTop="@dimen/common_offset_8dp"
            android:layout_marginEnd="@dimen/common_offset_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_offset_40dp"
            android:layout_marginHorizontal="@dimen/common_offset_16dp"
            android:layout_marginTop="@dimen/common_offset_8dp"
            android:background="@drawable/shape_border"
            android:queryHint="Search by ads"
            app:layout_constraintEnd_toStartOf="@id/ivProfile"
            app:layout_constraintStart_toEndOf="@id/ivAppIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBanners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_offset_16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            tools:itemCount="2"
            tools:listitem="@layout/rv_banner" />

        <ImageView
            android:id="@+id/ivBannerSale"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="@dimen/common_offset_16dp"
            android:paddingHorizontal="@dimen/common_offset_8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/rvBanners" />

        <TextView
            android:id="@+id/tvBestDealsTitle"
            style="@style/TextRegular.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_offset_16dp"
            android:layout_marginTop="@dimen/common_offset_16dp"
            android:text="@string/fr_home_title"
            app:layout_constraintTop_toBottomOf="@id/rvBanners" />

        <TextView
            android:id="@+id/tvMoreBestDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_offset_16dp"
            android:text="@string/fr_deal_similar_more_deals"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tvBestDealsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvBestDealsTitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBestDeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_offset_16dp"
            android:layout_marginTop="@dimen/common_offset_24dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tvBestDealsTitle"
            tools:itemCount="3"
            tools:listitem="@layout/rv_deal_linear" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_offset_8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvBestDeals"
            tools:itemCount="2"
            tools:listitem="@layout/rv_home_subcategories" />

        <TextView
            android:id="@+id/tvSearchResultEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_offset_16dp"
            android:layout_marginTop="@dimen/common_offset_24dp"
            android:text="@string/empty_search_result"
            android:textAlignment="center"
            android:textColor="@color/defaultColor"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/searchView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_offset_16dp"
            android:paddingBottom="@dimen/common_offset_8dp"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            app:spanCount="2"
            tools:itemCount="8"
            tools:listitem="@layout/rv_deal_grid" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/homeGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="rvBanners, ivBannerSale, tvBestDealsTitle, tvMoreBestDeals, rvBestDeals, rvCategories" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/bestDealsGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="tvBestDealsTitle, tvMoreBestDeals, rvBestDeals" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
