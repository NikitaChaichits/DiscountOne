<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_offset_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextRegular.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_8dp"
        android:text="@string/profile"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light"
        app:layout_constraintTop_toBottomOf="@id/ivBack" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="@dimen/common_offset_40dp"
        android:layout_height="@dimen/common_offset_40dp"
        android:layout_marginStart="@dimen/common_offset_16dp"
        android:layout_marginTop="@dimen/common_offset_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:srcCompat="@drawable/ic_avatar" />

    <TextView
        android:id="@+id/tvProfileName"
        style="@style/TextRegular.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_16dp"
        app:layout_constraintStart_toEndOf="@id/ivProfileImage"
        app:layout_constraintTop_toTopOf="@id/ivProfileImage"
        tools:text="UserName" />

    <TextView
        android:id="@+id/tvProfileEmail"
        style="@style/TextRegular.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_16dp"
        app:layout_constraintStart_toEndOf="@id/ivProfileImage"
        app:layout_constraintTop_toBottomOf="@id/tvProfileName"
        tools:text="Email" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvProfileEmail">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llPersonalData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_offset_24dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProfileData"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tvProfileData"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/personal_data"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llSavedPublication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPSavedPublication"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_bookmark_deal" />

            <TextView
                android:id="@+id/tvSavedPublication"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/saved_publications"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llNotification"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNotification"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_notification" />

            <TextView
                android:id="@+id/tvNotification"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/notifications"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPrivacyPolicy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_security" />

            <TextView
                android:id="@+id/tvPrivacyPolicy"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/privacy_policy"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llConditionsOfUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivConditionsOfUse"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_security_user" />

            <TextView
                android:id="@+id/tvConditionsOfUse"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/conditions_of_use"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llAffiliateDisclosure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAffiliateDisclosure"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_disclosure" />

            <TextView
                android:id="@+id/tvAffiliateDisclosure"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/affiliate_disclosure"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivTheme"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_theme" />

            <TextView
                android:id="@+id/tvTheme"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/theme"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLogout"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_logout" />

            <TextView
                android:id="@+id/tvLogout"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_offset_16dp"
                android:text="@string/log_out"
                android:paddingVertical="@dimen/common_offset_16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/common_offset_8dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivLoading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:foregroundGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>