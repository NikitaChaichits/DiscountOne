<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextRegular.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_32dp"
        android:text="@string/additional_information_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/TextRegular.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_offset_32dp"
        android:layout_marginTop="@dimen/common_offset_12dp"
        android:text="@string/additional_information_description"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:srcCompat="@drawable/ic_camera" />

    <ProgressBar
        android:id="@+id/loaderProfileImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_wheel"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/common_offset_4dp"
        app:layout_constraintEnd_toEndOf="@id/ivProfileImage"
        app:layout_constraintStart_toStartOf="@id/ivProfileImage"
        app:layout_constraintTop_toBottomOf="@id/ivProfileImage" />

    <TextView
        android:id="@+id/tvGenderTitle"
        style="@style/TextRegular.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_offset_32dp"
        android:layout_marginTop="@dimen/common_offset_12dp"
        android:text="@string/gender"
        app:layout_constraintTop_toBottomOf="@id/ivProfileImage" />

    <TextView
        android:id="@+id/tvGenderMale"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/male"
        android:layout_marginTop="@dimen/common_offset_12dp"
        app:layout_constraintStart_toStartOf="@id/tvGenderTitle"
        app:layout_constraintTop_toBottomOf="@id/tvGenderTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGenderMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_8dp"
        app:layout_constraintStart_toEndOf="@id/tvGenderMale"
        app:layout_constraintTop_toTopOf="@id/tvGenderMale"
        app:layout_constraintBottom_toBottomOf="@id/tvGenderMale"
        app:srcCompat="@drawable/ic_gender_not_selected" />

    <TextView
        android:id="@+id/tvGenderFemale"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/female"
        android:layout_marginStart="@dimen/common_offset_32dp"
        android:layout_marginTop="@dimen/common_offset_12dp"
        app:layout_constraintStart_toEndOf="@id/ivGenderMale"
        app:layout_constraintTop_toBottomOf="@id/tvGenderTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGenderFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_8dp"
        app:layout_constraintStart_toEndOf="@id/tvGenderFemale"
        app:layout_constraintTop_toTopOf="@id/tvGenderFemale"
        app:layout_constraintBottom_toBottomOf="@id/tvGenderFemale"
        app:srcCompat="@drawable/ic_gender_not_selected" />

    <TextView
        android:id="@+id/tvDateOfBirthTitle"
        style="@style/TextRegular.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_offset_32dp"
        android:layout_marginTop="@dimen/common_offset_16dp"
        android:text="@string/date_of_birth"
        app:layout_constraintTop_toBottomOf="@id/ivGenderMale" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_offset_40dp"
        android:layout_marginHorizontal="@dimen/common_offset_32dp"
        android:layout_marginTop="@dimen/common_offset_4dp"
        android:background="@drawable/shape_border"
        android:drawableEnd="@drawable/ic_calendar"
        android:hint="@string/date_of_birth"
        android:paddingHorizontal="@dimen/common_offset_12dp"
        android:paddingVertical="@dimen/common_offset_8dp"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDateOfBirthTitle"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_offset_40dp"
        android:layout_marginHorizontal="@dimen/common_offset_32dp"
        android:layout_marginTop="@dimen/common_offset_24dp"
        android:background="@drawable/shape_border"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="@string/city"
        android:inputType="textCapSentences"
        android:paddingHorizontal="@dimen/common_offset_12dp"
        android:paddingVertical="@dimen/common_offset_8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/common_textSize_16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvDateOfBirth" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/ButtonColored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_24dp"
        android:enabled="false"
        android:text="@string/btn_continue"
        app:cornerRadius="@dimen/radius_12"
        app:layout_constraintTop_toBottomOf="@+id/etCity" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkip"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_8dp"
        android:text="@string/skip"
        app:cornerRadius="@dimen/radius_12"
        app:layout_constraintTop_toBottomOf="@+id/btnContinue" />

</androidx.constraintlayout.widget.ConstraintLayout>