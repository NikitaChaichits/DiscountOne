<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="156dp"
    android:layout_height="324dp"
    android:layout_marginEnd="@dimen/common_offset_8dp"
    android:background="@drawable/bg_deal"
    android:padding="@dimen/common_offset_8dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/ivDealImage"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCouponImage"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_grey_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ic_bookmark"
        android:padding="@dimen/common_offset_8dp"
        android:src="@drawable/ic_wishlist_colored"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCouponCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/common_offset_4dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/common_textSize_12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivCouponImage"
        app:layout_constraintStart_toStartOf="@id/ivCouponImage"
        app:layout_constraintTop_toBottomOf="@id/ivBookmark"
        tools:text="Fashion" />

    <ImageView
        android:id="@+id/ivCouponShopImage"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/common_offset_20dp"
        app:layout_constraintBottom_toBottomOf="@id/ivCouponImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_avatar" />

    <TextView
        android:id="@+id/tvCouponPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_4dp"
        android:background="@drawable/bg_coupon_text_shape"
        android:backgroundTint="@color/couponPriceColor"
        android:paddingVertical="2dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/common_textSize_12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivCouponImage"
        app:layout_constraintEnd_toEndOf="@id/ivCouponImage"
        app:layout_constraintStart_toStartOf="@id/ivCouponImage"
        tools:text="Rs 200 OFF" />

    <TextView
        android:id="@+id/tvPublishedDate"
        style="@style/TextRegular.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/common_offset_8dp"
        android:drawablePadding="2dp"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCouponImage"
        tools:text="12/12/2023" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_8dp"
        android:layout_marginEnd="@dimen/common_offset_4dp"
        android:gravity="center_vertical"
        android:textColor="@color/defaultColor"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="13sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@id/tvPriceWithDiscount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDealImage"
        tools:text="€130.00" />

    <TextView
        android:id="@+id/tvPriceWithDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/tvPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPrice"
        app:layout_constraintTop_toTopOf="@id/tvPrice"
        tools:text="€65.000" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPriceWithDiscount"
        tools:text="Nike Air Max 90 SE" />

    <TextView
        android:id="@+id/tvCouponTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPublishedDate"
        tools:text="Nike Air Max 90 SE" />

    <ImageView
        android:id="@+id/ivShopLogo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/common_offset_8dp"
        app:layout_constraintBottom_toTopOf="@id/btnGetDeal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_8dp"
        android:layout_marginEnd="@dimen/common_offset_4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_14sp"
        app:layout_constraintBottom_toBottomOf="@id/ivShopLogo"
        app:layout_constraintStart_toEndOf="@id/ivShopLogo"
        app:layout_constraintTop_toTopOf="@id/ivShopLogo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Nike" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetDeal"
        style="@style/ButtonColored.Coupon"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/shop_now"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grCouponUnique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="ivCouponImage, tvCouponCategoryName, ivCouponShopImage, tvCouponPrice, tvPublishedDate, tvCouponTitle" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grDiscountUnique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvPrice, tvPriceWithDiscount, ivShopLogo, tvShopName" />
</androidx.constraintlayout.widget.ConstraintLayout>