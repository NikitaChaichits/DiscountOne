<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="308dp"
    android:layout_marginEnd="@dimen/common_offset_8dp"
    android:background="@drawable/shape_deal"
    android:padding="@dimen/common_offset_8dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/ivDealImage"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ic_bookmark"
        android:padding="@dimen/common_offset_8dp"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintEnd_toEndOf="@id/ivDealImage"
        app:layout_constraintTop_toTopOf="@id/ivDealImage" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_16dp"
        android:layout_marginEnd="@dimen/common_offset_8dp"
        android:textColor="@color/defaultColor"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPriceWithDiscount"
        app:layout_constraintTop_toBottomOf="@id/ivDealImage"
        tools:text="€130.00" />

    <TextView
        android:id="@+id/tvPriceWithDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="@dimen/common_textSize_14sp"
        app:layout_constraintStart_toEndOf="@id/tvPrice"
        app:layout_constraintTop_toTopOf="@id/tvPrice"
        app:layout_constraintBottom_toBottomOf="@id/tvPrice"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="€65.00" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_offset_8dp"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPriceWithDiscount"
        tools:text="Nike Air Max 90 SE" />

    <ImageView
        android:id="@+id/ivCouponCompanyLogo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/common_offset_8dp"
        app:layout_constraintBottom_toTopOf="@id/btnGetDeal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCouponCompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_14sp"
        android:layout_marginEnd="@dimen/common_offset_4dp"
        app:layout_constraintBottom_toBottomOf="@id/ivCouponCompanyLogo"
        app:layout_constraintEnd_toStartOf="@id/ivRateArrow"
        app:layout_constraintStart_toEndOf="@id/ivCouponCompanyLogo"
        app:layout_constraintTop_toTopOf="@id/ivCouponCompanyLogo"
        tools:text="Nike" />

    <ImageView
        android:id="@+id/ivRateArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_offset_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivCouponCompanyLogo"
        app:layout_constraintEnd_toStartOf="@id/tvRate"
        app:layout_constraintTop_toTopOf="@id/ivCouponCompanyLogo"
        tools:src="@drawable/ic_arrow_up" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_offset_8dp"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/common_textSize_14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivCouponCompanyLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivCouponCompanyLogo"
        tools:text="273" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetDeal"
        style="@style/ButtonColored.Coupon"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/shop_now"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCopy"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnCopy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_copy_coupon"
        android:layout_marginStart="@dimen/common_offset_8dp"
        app:layout_constraintStart_toEndOf="@id/btnGetDeal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>